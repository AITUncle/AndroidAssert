<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_updateUIAtMainThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="updateUIAtMainThread" />

    <Button
        android:id="@+id/btn_updateUIAtSubThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="updateUIAtSubThread" />

    <Button
        android:id="@+id/btn_writeFileAtMainThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="writeFileAtMainThread" />

    <Button
        android:id="@+id/btn_startTestActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startTestActivity" />

</LinearLayout>